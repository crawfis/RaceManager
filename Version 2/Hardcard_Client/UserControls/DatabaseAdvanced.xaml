        <Button Content="Backup" Height="23" HorizontalAlignment="Left" Margin="12,15,0,0" Name="btnBackup" VerticalAlignment="Top" Width="75" Click="btnBackup_Click" />
        <Button Content="Restore" Height="23" HorizontalAlignment="Left" Margin="12,55,0,0" Name="btnRestore" VerticalAlignment="Top" Width="75" Click="btnRestore_Click" />
        <Button Content="Delete" Height="23" HorizontalAlignment="Left" Margin="12,95,0,0" Name="btnDelete" VerticalAlignment="Top" Width="75" Click="btnDelete_Click" />
        <Label Content="Export current event to file " Height="28" HorizontalAlignment="Right" Margin="0,15,6,0" Name="label1" VerticalAlignment="Top" Width="174" />
        <Label Content="Import event from disk" Height="28" HorizontalAlignment="Left" Margin="93,55,0,0" Name="label2" VerticalAlignment="Top" Width="174" />
        <Label Content="Remove event forever" Height="28" HorizontalAlignment="Left" Margin="93,95,0,0" Name="label3" VerticalAlignment="Top" Width="174" />
    </Grid>
</Window>
